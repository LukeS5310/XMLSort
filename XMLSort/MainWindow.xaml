<Window x:Class="XMLSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLSort"
        mc:Ignorable="d"
        Title="XML Sort 1.0" Height="120" Width="240" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="BTN_START" Content="СТАРТ" Margin="0,40,0,0" VerticalAlignment="Center" Width="75" HorizontalAlignment="Center" IsEnabled="False" Click="BTN_START_Click"/>
        <ProgressBar x:Name="PB_Progress" HorizontalAlignment="Center" Height="15" Margin="0,0,0,27" VerticalAlignment="Center" Width="200"/>
        <Label HorizontalContentAlignment="Center" x:Name="LBL_Status" Content="LBL_Status" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Center" Width="220" Height="25"/>

    </Grid>
</Window>
